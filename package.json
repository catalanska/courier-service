  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "babel src --out-dir dist",
    "test": "NODE_ENV=testing jest --forceExit --detectOpenHandles --passWithNoTests",
    "test:coverage": "NODE_ENV=testing jest --detectOpenHandles --coverage",
    "test:codecov": "./node_modules/.bin/codecov --token=588d2420-be3e-4021-b6b4-6c3eb42ac4da",
    "restart": "rimraf dist && npm run build && npm run start",
    "start": "node dist/index.js"
  },
  "author": "Javier Jim√©nez",
  "license": "ISC",
  "devDependencies": {
    "codecov": "3.6.5",
    "dotenv": "8.2.0",
    "eslint": "6.8.0",
    "express": "4.17.1",
    "express-json-validator-middleware": "2.1.1",
    "husky": "4.2.5",
    "jest": "25.3.0",
    "mongoose": "5.9.9",
    "prettier": "2.0.4",
    "supertest": "4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:coverage",
      "pre-push": "npm run test:codecov"
    }
  },
  "dependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "nodemon": "2.0.3",
    "rimraf": "3.0.2"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "dist/"
